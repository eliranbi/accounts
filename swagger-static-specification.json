  "tags": [      
      {
          "name": "account",
          "description": "Account object"
      }
  ],
  "schemes": [      
      "http"
  ],

  "host": "localhost:3000",    

  "paths": {
    "/ping": {
      "get": {
        "description": "Status route, so we can check if server is alive",
        "tags": [
          "Ping"
        ],
        "responses": {
          "200": {
            "description": "Server is alive",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "health": {
                      "type": "boolean"
                    },
                    "date": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "health": true,
                    "date": "2018-02-19T15:36:46.758Z"
                  }
                }
              }
            }
          }
        }
      }
    },  "/accounts" : {
        "post" : {
            "summary" : "Create new account",
            "description": "Create new account",
            "tags": [
              "Accounts"
            ],
            "produces": ["application/json"],
            "consumes": ["application/json"],
            "parameters": [
                {
                    "in": "body",
                    "name": "body",
                    "description": "account create object",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/requestBody"                                                    
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "successful operation",
                    "schema": {                        
                            "$ref": "#/definitions/successfulResponse"                        
                    }
                },
                "400": {
                    "description": "Invalid status value",
                    "schema": {
                        "$ref": "#/definitions/invalidResponse"
                    }
                }
            }
        }
    },
    "/accounts/{accountId}" : {
        "get" : {
            "summary" : "Get account",
            "description": "Get account",
            "tags": [
              "Accounts"
            ],
            "produces": ["application/json"],
            "parameters": [
                {
                    "name": "accountId",
                    "in": "path",
                    "description": "AccountId to get",
                    "required": true,
                    "type": "string"
                }                
            ],
            "responses": {
                "200": {
                    "description": "successful operation",
                    "schema": {
                        "type": "object",
                        "items": {
                            "$ref": "#/definitions/account"
                        }
                    }
                },
                "400": {
                    "description": "Invalid status value",
                    "schema": {
                        "$ref": "#/definitions/invalidResponse"
                    }
                }
            }
        }
    }
  },"definitions": {
    "account": {
        "type": "object",
        "properties": {
            "accountId": {
                 "type": "integer"
            },
            "accountName": {
                "type": "string"
            },
            "walletId": {
                "type": "string"
            },
            "address": {
                "type": "string"
            },
            "createAt": {
                "type": "string"
            }
        }
    },
    "requestBody": {
        "x-name": "body", 
        "type": "object",
        "required": [
          "accountId"          
       ],
        "properties": {
            "accountId": {
                "type": "string",
                "example": "00019918321"
            },
            "accountName": {
                "type": "string",
                "example": "STT MMF Account"
            }
        }
    },
    "invalidResponse": {
        "type": "object",
        "properties": {
            "status": {
                "type": "string"
            },
            "message": {
                "type": "string"
            }
        }

    },"successfulResponse": {
      "type": "object",
      "properties": {          
          "message": {
              "type": "string"
          }
      }
    }
  } 
}
